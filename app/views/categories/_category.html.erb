<div class="container">
  <% @categories.each do |category|%>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            <%= link_to 'View', category_path(category), class: "btn btn-outline-success" %>
            <% if logged_in? && current_user.admin? %>
              <%= link_to 'Edit', edit_category_path(category), class: "btn btn-outline-info" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created at <%= time_ago_in_words(category.created_at)%></small>
            <small>Updated at <%= time_ago_in_words(category.updated_at)%></small>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>
