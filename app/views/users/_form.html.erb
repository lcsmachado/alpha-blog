 <div class="container mt-5">
  <div class="row justify-content-center" id="form-background">
    <div class="col-md-10">
    <%= render "shared/errors", obj: @user %>
      <%= form_with( model: @user, class: "shadow p-3 mb-3 bg-info rounded", local:true ) do |f|%>
          <div class="form-group row">
            <%= f.label :username, class: "col-md-2 col-md-form-label text-light"%>
            <div class="col-md-10">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"%>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :email, class: "col-md-2 col-md-form-label text-light"%>
            <div class="col-md-10">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter a valid e-mail address"%>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :password, class: "col-md-2 col-md-form-label text-light" %>
            <div class="col-md-10">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>   
      <%end%>
    </div>
  </div>
</div>